<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.nnnnnn} [%-20.20t] %-80.80c{-2} %-5level %msg%n" />
        </Console>
        <RollingFile name="twowheelhub"
                     filename="logs/twowheelhub.log"
                     filePattern="logs/twowheelhub.%d{MM-dd-yyyy}-%i.log" >
            <PatternLayout pattern="%d{HH:mm:ss.nnnnnn} [%-20.20t] %-80.80c{-2} %-5level %msg%n" />
            <TimeBasedTriggeringPolicy />
            <DefaultRolloverStrategy>
                <Delete basePath="${basedir}" maxDepth="2">
                    <IfFileName glob="logs/twowheelhub.*.log" />
                    <IfLastModified age="21d" />
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="WARN">
            <AppenderRef ref="Console" />
        </Root>

        <Logger name="com.twowheelhub" level="DEBUG" additivity="false" >
            <AppenderRef ref="Console" />
        </Logger>
    </Loggers>
</Configuration>